{
  "compilerOptions": {
    "experimentalDecorators": true,
    "importHelpers": true,
    "downlevelIteration": true,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "target": "es2018",
    "baseUrl": ".",
    "rootDirs": [".", "dist/bin"],
    "types": []
  },
  "bazelOptions": {
    "devmodeTargetOverride": "es2018",
    "suppressTsconfigOverrideWarnings": true,
    "tsickle": false
  }
}
